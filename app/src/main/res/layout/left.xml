<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mlist"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/bg_color_deep">

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_color_deep"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip">

            <ImageView
                    android:id="@+id/head_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/head_default"/>

            <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/head_view"
                    android:text="NAME"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            <TextView
                    android:id="@+id/grade_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/name_textview"
                    android:layout_below="@+id/name_textview"
                    android:text="Nobody"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"/>
        </RelativeLayout>

        <include
                layout="@layout/line"
                android:layout_width="fill_parent"
                android:layout_height="2px"></include>

        <TextView
                android:id="@+id/plan_yesterday_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="昨天计划   90%"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

        <include
                layout="@layout/line"
                android:layout_width="fill_parent"
                android:layout_height="2px"></include>

        <TextView
                android:id="@+id/plan_today_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="今日计划"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

        <include
                layout="@layout/line"
                android:layout_width="fill_parent"
                android:layout_height="2px"></include>

        <TextView
                android:id="@+id/plan_tomorrow_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="明日计划"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

        <include
                layout="@layout/line"
                android:layout_width="fill_parent"
                android:layout_height="2px"></include>

        <TextView
                android:id="@+id/plan_everyweek_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="每周计划"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

        <include
                layout="@layout/line"
                android:layout_width="fill_parent"
                android:layout_height="2px"></include>

        <TextView
                android:id="@+id/plan_summary_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="计划总结"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>

        <include
                layout="@layout/line"
                android:layout_width="fill_parent"
                android:layout_height="2px"></include>

        <TextView
                android:id="@+id/plan_setting_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="设置"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>
    </LinearLayout>

</ScrollView>